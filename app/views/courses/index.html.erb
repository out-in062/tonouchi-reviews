<% provide(:title, t("layouts.application.courses")) %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6" data-testid="courses-heading"><%= t("layouts.application.courses") %></h1>

  <div class="mb-4">
    <%= form_with(url: courses_path, method: :get, class: "flex items-center space-x-2") do |form| %>
      <%= form.text_field :search, value: params[:search], placeholder: t(".search_placeholder"), class: "border rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 flex-grow" %>
      <%= form.submit t(".search_button"), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md" %>
    <% end %>
  </div>

  <div class="mb-4 flex items-center space-x-2">
    <%= form_with(url: courses_path, method: :get, class: "flex-grow flex items-center space-x-2") do |form| %>
      <%= form.hidden_field :search, value: params[:search] %>
      <%= select_tag :department, options_for_select([["全ての学部", "all"]] + @departments.map { |d| [d, d] }, params[:department]), onchange: "this.form.submit()", class: "border rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% end %>
  </div>

  <div class="mb-4 flex items-center space-x-2">
    <%= form_with(url: courses_path, method: :get, class: "flex-grow flex items-center space-x-2") do |form| %>
      <%= form.hidden_field :search, value: params[:search] %>
      <%= form.hidden_field :department, value: params[:department] %>
      <%= select_tag :sort, options_for_select(
          [
            [t(".sort_rating_desc"), "rating_desc"],
            [t(".sort_newest"), "newest"],
            [t(".sort_code_asc"), "code_asc"]
          ], params[:sort]), onchange: "this.form.submit()", class: "border rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% end %>
  </div>


  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @courses.each do |course| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
        <%= link_to course_path(course), class: "block p-6", data: { testid: "course-link-#{course.code}" } do %>
          <h2 class="text-xl font-semibold text-blue-600 mb-2 hover:text-blue-800"><%= course.name %></h2>
          <p class="text-gray-600 mb-1"><%= t(".instructor") %>: <%= course.instructor %></p>
          <p class="text-gray-500 text-sm"><%= course.department %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>