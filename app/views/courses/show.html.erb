<% provide(:title, @course.name) %>

<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @course.name %></h1>
        <p class="text-gray-600 text-lg mb-2"><%= t(".instructor") %>: <%= @course.instructor %></p>
        <p class="text-gray-500 mb-4"><%= t(".code") %>: <%= @course.code %></p>
      </div>
      <div>
        <%= link_to t(".write_review"), new_course_review_path(@course), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded", data: { testid: "write-review-link" } %>
      </div>
    </div>

    <div class="border-t border-gray-200 pt-4 mt-4">
      <h2 class="text-xl font-semibold text-gray-700 mb-2"><%= t(".info_title") %></h2>
      <ul class="list-disc list-inside text-gray-700">
        <li><%= t(".department") %>: <%= @course.department %></li>
        <li><%= t(".semester") %>: <%= @course.semester %></li>
        <li><%= t(".year") %>: <%= @course.year %></li>
        <li><%= t(".credits") %>: <%= @course.credits %></li>
      </ul>
    </div>

    <% if @course.description.present? %>
      <div class="border-t border-gray-200 pt-4 mt-4">
        <h2 class="text-xl font-semibold text-gray-700 mb-2"><%= t(".description_title") %></h2>
        <p class="text-gray-700 leading-relaxed"><%= simple_format(@course.description) %></p>
      </div>
    <% end %>

    <div class="border-t border-gray-200 pt-6 mt-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= t(".reviews_title") %></h2>
      <% if @course.reviews.any? %>
        <div class="space-y-4">
          <%= render partial: 'reviews/review', collection: @course.reviews, as: :review %>
        </div>
      <% else %>
        <p><%= t(".no_reviews") %></p>
      <% end %>
    </div>

    <div class="mt-8">
      <%= link_to t(".back_to_courses"), courses_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  </div>
</div>