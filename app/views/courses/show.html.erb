<% provide(:title, @course.name) %>

<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @course.name %></h1>
        <p class="text-gray-600 text-lg mb-2">担当教員: <%= @course.instructor %></p>
        <p class="text-gray-500 mb-4">授業コード: <%= @course.code %></p>
      </div>
      <div>
        <%= link_to "Write a Review", new_course_review_path(@course), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded", data: { testid: "write-review-link" } %>
      </div>
    </div>

    <div class="border-t border-gray-200 pt-4 mt-4">
      <h2 class="text-xl font-semibold text-gray-700 mb-2">授業情報</h2>
      <ul class="list-disc list-inside text-gray-700">
        <li>学部・学科: <%= @course.department %></li>
        <li>開講学期: <%= @course.semester %></li>
        <li>開講年度: <%= @course.year %></li>
        <li>単位数: <%= @course.credits %></li>
      </ul>
    </div>

    <% if @course.description.present? %>
      <div class="border-t border-gray-200 pt-4 mt-4">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">授業概要</h2>
        <p class="text-gray-700 leading-relaxed"><%= simple_format(@course.description) %></p>
      </div>
    <% end %>

    <div class="border-t border-gray-200 pt-6 mt-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Reviews</h2>
      <% if @course.reviews.any? %>
        <div class="space-y-4">
          <% @course.reviews.each do |review| %>
            <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
              <h3 class="font-semibold text-lg text-gray-900"><%= review.title %></h3>
              <p class="text-gray-600">Rating: <%= review.rating %> / 5</p>
              <p class="mt-2 text-gray-800"><%= review.content %></p>
              <p class="mt-2 text-sm text-gray-500" data-testid="review-author">Posted by: <%= review.user.name %></p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>No reviews yet. Be the first to write one!</p>
      <% end %>
    </div>

    <div class="mt-8">
      <%= link_to "授業一覧に戻る", courses_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  </div>
</div>