<h1><%= t(".title") %></h1>

<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :email, t(".email") %><br>
    <%= form.email_field :email, data: { testid: "login-email-input" } %>
  </div>

  <div>
    <%= form.label :password, t(".password") %><br>
    <%= form.password_field :password, data: { testid: "login-password-input" } %>
  </div>

  <div>
    <%= form.submit t(".submit"), data: { testid: "login-submit-button" } %>
  </div>
<% end %>
